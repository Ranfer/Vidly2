@model Vidly2.Models.Movie
@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Added Date: @Model.DateAdded.ToShortDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>

