@model List<Vidly2.Models.Movie>
@{
    ViewBag.Title = "ListMovies";
}

<h2>Movies</h2>
<table class="table">
    <thead>
        <tr>
            <th>Movies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </tbody>
</table>
